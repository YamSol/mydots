### 0. VARIABLES
# Super key
set $mod Mod4
# Alt
set $alt Mod1
# Window change for resizing, moving
set $WIN_CHANGE 60
set $WIN_CHANGE_1_2 30
# Lock command
# set $LOCK_SCREEN_COMMAND i3lock --nofork -i $LOCK_BG
set $LOCK_SCREEN_COMMAND i3lock --nofork --ignore-empty-password --show-keyboard-layout --color 232323


### 1. SERVICES
# network manager
exec --no-startup-id nm-applet
# clipboard
exec --no-startup-id copyq
# Power manager
exec --no-startup-id xfce4-power-manager
# Start the PolicyKit authentication agent for GUI sudo prompts
exec --no-startup-id /usr/lib/policykit-1-gnome/polkit-gnome-authentication-agent-1
# Picom (transparency)
# exec --no-startup-id picom -b
# code editor (depracieted: using systemd service insteed)
  #exec --no-startup-id emacs --daemon


### 2. CONFIG
# Start XDG autostart .desktop files using dex. See also https://wiki.archlinux.org/index.php/XDG_Autostart
exec --no-startup-id dex --autostart --environment i3
# grabs a logind suspend inhibit lock and use i3lock to lock the screen before suspend.
exec --no-startup-id "xss-lock --transfer-sleep-lock -- $LOCK_SCREEN_COMMAND"
# Load Wallpaper
exec --no-startup-id nitrogen --restore
# Set correct keyboard
exec --no-startup-id setxkbmap br
# Border style <normal|1pixel|pixel xx|none|pixel>
default_border pixel 5
default_floating_border normal
# Set inner/outer gaps
  gaps inner 0
  gaps outer -5
# Font
font pango:JetBrains Mono:style=Regular 14
# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod
# Focus follow mouse (False: follows new created windows)
focus_follows_mouse false
# move tiling windows via drag & drop by left-clicking into the title bar, or left-clicking anywhere into the window while holding the floating modifier.
tiling_drag modifier titlebar

# Start i3bar to display a workspace bar (plus the system information i3status finds out, if available)
bar {
        # position top
	separator_symbol " | "
	output eDP
	tray_output primary
        # status_command i3blocks
        status_command DEFAULT_SCRIPTS="/usr/share/i3blocks" MYSCRIPTS="$HOME/.config/i3blocks" i3blocks
}
bar {
        # position top
	font pango:JetBrains Mono:style=Regular 10
	separator_symbol " | "
	output HDMI-A-0
        status_command DEFAULT_SCRIPTS="/usr/share/i3blocks" MYSCRIPTS="$HOME/.config/i3blocks" i3blocks
}


