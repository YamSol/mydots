# TRANSPARENCY
bindsym $mod+$alt+t mode "$mode_transparency"
mode "$mode_transparency" {
    set $delta 4
    bindsym plus  	exec --no-startup-id picom-trans +$delta --current
    bindsym minus 	exec --no-startup-id picom-trans -$delta --current
    bindsym Return  mode "default"
    bindsym Escape  mode "default"
    bindsym $mod+$alt+t mode "default"
    bindsym Ctrl+g  mode "default"
}

# VOLUME
# set $refresh_i3status killall -SIGUSR1 i3status
set $refresh_i3status pkill -SIGRTMIN+11 i3blocks
set $amixer_cmd amixer -q set Master
bindsym XF86AudioRaiseVolume exec $amixer_cmd 10%+   && $refresh_i3status
bindsym XF86AudioLowerVolume exec $amixer_cmd 10%-   && $refresh_i3status
bindsym XF86AudioMute        exec $amixer_cmd toggle && $refresh_i3status
bindsym XF86AudioMicMute     exec $amixer_cmd toggle && $refresh_i3status

# Brightness
bindsym XF86MonBrightnessUp   exec brightnessctl set 10%+
bindsym XF86MonBrightnessDown exec brightnessctl set 10%-

# Media Control
bindsym XF86AudioPlay  exec playerctl play-pause;
bindsym XF86AudioPause exec playerctl play-pause;
bindsym XF86AudioStop  exec playerctl stop;
bindsym XF86AudioNext  exec playerctl next;
bindsym XF86AudioPrev  exec playerctl previous;


# kill focused window
bindsym $mod+Shift+q kill

# kill window
bindsym $mod+Ctrl+x --release exec --no-startup-id xkill 

# Turn window sticky
bindsym $mod+Shift+y sticky toggle

# picom
bindsym $mod+t exec --no-startup-id pkill picom
bindsym $mod+Ctrl+t exec --no-startup-id picom -b

# Lock screen
bindsym $mod+9 exec $LOCK_SCREEN_COMMAND

# reload the configuration file
bindsym $mod+Shift+c reload

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

## 3.3 WINDOWS

# 3.3.1 resize window (you can also use the mouse for that)
bindsym $mod+r mode "resize"
mode "resize" {
        # Grow/shrink width/height
        bindsym Left  resize shrink width  $WIN_CHANGE px or 10 ppt
        bindsym Down  resize grow   height $WIN_CHANGE px or 10 ppt
        bindsym Up    resize shrink height $WIN_CHANGE px or 10 ppt
        bindsym Right resize grow   width  $WIN_CHANGE px or 10 ppt
        # # alternative 1
        bindsym j        resize shrink width  $WIN_CHANGE px or $WIN_CHANGE ppt
        bindsym k        resize grow   height $WIN_CHANGE px or $WIN_CHANGE ppt
        bindsym l        resize shrink height $WIN_CHANGE px or $WIN_CHANGE ppt
        bindsym ccedilla resize grow   width  $WIN_CHANGE px or $WIN_CHANGE ppt
        # # alternative 2
        # # Left, Down, Up Right
        # bindcode 83 resize shrink width  $WIN_CHANGE px or 10 ppt
        # bindcode 88 resize grow   height $WIN_CHANGE px or 10 ppt
        # bindcode 80 resize shrink height $WIN_CHANGE px or 10 ppt
        # bindcode 85 resize grow   width  $WIN_CHANGE px or 10 ppt


        # SAME, but /2 of the change

        bindsym Ctrl+Left  resize shrink width  $WIN_CHANGE_1_2 px or 10 ppt
        bindsym Ctrl+Down  resize grow   height $WIN_CHANGE_1_2 px or 10 ppt
        bindsym Ctrl+Up    resize shrink height $WIN_CHANGE_1_2 px or 10 ppt
        bindsym Ctrl+Right resize grow   width  $WIN_CHANGE_1_2 px or 10 ppt
        # # alternative 1
        bindsym Ctrl+j        resize shrink width  $WIN_CHANGE_1_2 px or $WIN_CHANGE_1_2 ppt
        bindsym Ctrl+k        resize grow   height $WIN_CHANGE_1_2 px or $WIN_CHANGE_1_2 ppt
        bindsym Ctrl+l        resize shrink height $WIN_CHANGE_1_2 px or $WIN_CHANGE_1_2 ppt
        bindsym Ctrl+ccedilla resize grow   width  $WIN_CHANGE_1_2 px or $WIN_CHANGE_1_2 ppt
        # # alternative 2
        # # Left, Down, Up Right
        # bindcode Ctrl+83 resize shrink width  $WIN_CHANGE_1_2 px or 10 ppt
        # bindcode Ctrl+88 resize grow   height $WIN_CHANGE_1_2 px or 10 ppt
        # bindcode Ctrl+80 resize shrink height $WIN_CHANGE_1_2 px or 10 ppt
        # bindcode Ctrl+85 resize grow   width  $WIN_CHANGE_1_2 px or 10 ppt

        # exit mode
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
	bindsym Ctrl+g  mode "default"
}

