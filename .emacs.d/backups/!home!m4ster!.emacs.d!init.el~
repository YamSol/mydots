;; -*- lexical-binding: t; -*-
;;; init.el --- Arquivo principal de configuração do Emacs

;; Inicializa o sistema de pacotes
(package-initialize)
(eval-when-compile (require 'use-package))

;; Carregar configurações principais
(load-file (expand-file-name "config.el" user-emacs-directory))  ;; Configurações principais do Emacs

;; Carregar pacotes e modos específicos
(load-file (expand-file-name "includes/move-text.el" user-emacs-directory)) ;; Movimentação de texto
(load-file (expand-file-name "includes/simpc-mode.el" user-emacs-directory)) ;; Modo simples para C
(load-file (expand-file-name "includes/smali-mode.el" user-emacs-directory)) ;; Modo simples para código SMALI


;;; PACKAGES

(provide 'init)



;;; init.el ends here
